<div id="divDetalleOferta" class="modal modalMensajeForo">

    <div class="row">
        <div class="col-xs-12">
            <div class="btn btn-warning alignRight" ng-click="CerrarOFerta()">Cerrar</div>
            <div class="btn btn-danger alignRight" ng-click="BajaSeleccionadosOferta()">Baja a seleccionados</div>
        </div>
    </div>

    <div class="row">
        <div ng-if="Oferta.Id == 0" class="col-xs-12 subrayado">
            <h2>Nueva oferta</h2>
        </div>
        <div ng-if="Oferta.Id != 0" class="col-xs-12 subrayado">
            <h2>Actualizar oferta</h2>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Titulo:</div>
                <div class="col-xs-8"> <input type="text" ng-model="Oferta.Titulo" /></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Resumen:</div>
                <div class="col-xs-8"> <input type="text" ng-model="Oferta.Resumen" /></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Descripción:</div>
                <div class="col-xs-8"> <textarea ng-model="Oferta.Descripcion" rows="5"></textarea></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Locación:</div>
                <div class="col-xs-8"><input type="text" ng-model="Oferta.Locacion"></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Precio:</div>
                <div class="col-xs-1"><input type="text" ng-model="Oferta.Precio"></div>
            </div>
        </div>
        
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Fotos:</div>
                <div class="col-xs-4">
                    @using (Html.BeginForm("UploadPhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formUsuarioPhoto" }))
                    {
                        <input type="file" name="fileInput" id="fileInput" />
                    }
                </div>
                <div class="col-xs-4">
                    <a href="#" class="btn-mini btn-primary btn-xs alignLeft" ng-click="SubirFotoOferta(Oferta.Id)">
                        <span class="glyphicon glyphicon-edit"></span> Añadir
                    </a>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-6 col-sm-3 col-md-2 contenedorPhoto" ng-repeat="fotografias in Oferta.Fotografias">
                        <div class="row">
                            <div class="col-xs-12">
                                <img alt="" class="photo" ng-src="{{fotografias.RutaFoto}}" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <p><input type="checkbox" ng-model="fotografias.Baja" />Eliminar</p>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <input type="radio" name="fotoPrincipal" ng-checked="fotografias.EsPrincipal==true" ng-model="fotografias.EsPrincipal" value="true" />Principal
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>



        <div class="col-xs-12">
            <a href="#" class="btn btn-primary btn-sm alignRight" ng-click="GuardarOferta()">
                <span class="glyphicon glyphicon-edit"></span> Guardar
            </a>
        </div>

    </div>

   

</div>