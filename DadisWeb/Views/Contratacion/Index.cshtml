<div id="divListaContrataciones" class="marginTopBody">
    <div class="container" ng-init="BuscarQuedadas()">
        <div class="row subrayado">
            <div class="col-xs-12">
                <h1 class="col-xs-12 col-sm-6 alignLeft">Contrataciones grupales</h1>
                <div class="btn btn-danger alignRight" ng-if="DatosUsuarioLogado!=null && DatosUsuarioLogado!=undefined && DatosUsuarioLogado.Id != 0" ng-click="BajaSeleccionadosQuedada()">Baja a seleccionados</div>
                <div class="btn btn-default alignRight" ng-if="DatosUsuarioLogado!=null && DatosUsuarioLogado!=undefined && DatosUsuarioLogado.Id != 0" ng-click="AltaQuedada()">Nueva quedada</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 TemaForo" ng-repeat="quedada in Quedadas" ng-click="GetQuedada(quedada.Id)">
                <div class="row backGroundForo1">
                    <div class="col-xs-1">
                        <input type="checkbox" ng-model="quedada.Seleccionado" />
                    </div>
                    <div class="col-xs-11">
                        <h2>{{quedada.Titulo}}</h2>
                    </div>
                </div>
                <div class="row cuerpoTemaForo">
                    <div class="col-xs-2">
                        <img alt="persona" ng-src="{{(quedada.RutaFotoPrincipal != null && quedada.RutaFotoPrincipal != '') ? quedada.RutaFotoPrincipal : '/Content/images/person.jpg'  }}" ng-click="MostrarUsuario(mensajeForo.IdUsuarioAlta)" class="photoLogado" />
                    </div>
                    <div class="col-xs-10">
                        <h2>{{quedada.Resumen}}</h2>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@Html.Partial("_DetalleContratacion")