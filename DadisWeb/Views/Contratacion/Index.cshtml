<div id="divListaContrataciones" class="marginTopBody">
    <div class="container" ng-init="BuscarContrataciones()">
        <div class="row subrayado">
            <div class="col-xs-12">
                <h1 class="col-xs-12 col-sm-6 alignLeft">Contrataciones grupales</h1>
                <div class="btn btn-danger alignRight" ng-if="DatosUsuarioLogado!=null && DatosUsuarioLogado!=undefined && DatosUsuarioLogado.Id != 0" ng-click="BajaSeleccionadosContratacion()">Baja a seleccionados</div>
                <div class="btn btn-default alignRight" ng-if="DatosUsuarioLogado!=null && DatosUsuarioLogado!=undefined && DatosUsuarioLogado.Id != 0" ng-click="AltaContratacion()">Nueva contratacion grupal</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 TemaForo" ng-repeat="contratacion in Contrataciones" ng-click="GetContratacion(contratacion.Id)">
                <div class="row backGroundForo1">
                    <div class="col-xs-1">
                        <input type="checkbox" ng-model="contratacion.Seleccionado" />
                    </div>
                    <div class="col-xs-12 col-md-8">
                        <h2>{{contratacion.Titulo}}</h2>
                    </div>
                    <div class="col-xs-12 col-md-3 alignRight">
                        en: {{contratacion.Locacion}}
                    </div>
                </div>
                <div class="row cuerpoTemaForo">
                    <div class="col-xs-2">
                        <img alt="persona" ng-src="{{(contratacion.RutaFotoPrincipal != null && contratacion.RutaFotoPrincipal != '') ? contratacion.RutaFotoPrincipal : '/Content/images/person.jpg'  }}" class="photoLogado" />
                    </div>
                    <div class="col-xs-10">
                        Precio Total: {{contratacion.PrecioTotal}} €
                    </div>
                    <div class="col-xs-10">
                        Apuntados: {{contratacion.Apuntados.length}}
                    </div>
                    <div class="col-xs-10">
                        Máximo de niños: {{contratacion.MaximoHijos}}
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@Html.Partial("_DetalleContratacion")