    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Telefono:</div>
                <div class="col-xs-8"><input type="text" ng-model="DatosUsuario.Telefono" /></div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">E-mail:</div>
                <div class="col-xs-8"><input type="text" ng-model="DatosUsuario.Email" /></div>
            </div>
        </div>
    </div>
     

    <div ng-if="DatosUsuario.Id != 0" class="row">
        <div class="col-xs-2">Fotos:</div>
        <div class="col-xs-10"></div>
    </div>


    <div class="row" ng-if="Edicion==true">
        <div class="col-xs-12">
            <div class="btn btn-primary alignRight" ng-click="GuardarUsuario()">Guardar</div>
        </div>
    </div>

</div>