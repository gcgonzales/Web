        <div class="col-xs-12 col-sm-6">
            <div class="row">

            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="row">

            </div>
        </div>

     
    </div>*@

    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Telefono:</div>
                <div class="col-xs-8"><input type="text" ng-readonly="!Editable()" ng-model="DatosUsuario.Telefono" /></div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">E-mail:</div>
                <div class="col-xs-8"><input type="text" ng-readonly="!Editable()" ng-model="DatosUsuario.Email" /></div>
            </div>
        </div>
    </div>
     

    <div ng-if="DatosUsuario.Id != 0" class="row">
        <div class="col-xs-2">Fotos:</div>
        @*<div class="col-xs-9"><input type="file" id="rutaFoto" /></div>
        <div class="col-xs-1">
            <a href="#" class="btn btn-primary btn-xs alignRight" ng-click="SubirFoto()">
                <span class="glyphicon glyphicon-edit"></span> Subir
            </a>
        </div>*@
        <div class="col-xs-9">
            @using (Html.BeginForm("UploadPhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formUsuarioPhoto" }))
            {
                <input type="file" name="fileInput" />

                @*<input type="submit" name="Submit" id="Submit" value="Upload" />*@
            }
        </div>
        <div class="col-xs-1">
            <a href="#" class="btn btn-primary btn-xs alignRight" ng-click="SubirFoto()">
                <span class="glyphicon glyphicon-edit"></span> Subir
            </a>
        </div>
        <div class="col-xs-12">
            <img alt="" style="width:50px;height:50px" ng-src="{{DatosUsuario.RutaFoto != null ? DatosUsuario.RutaFoto : '/Content/images/person.jpg'}}" />
        </div>
    </div>


    <div class="row" ng-if="Editable()">
        <div class="col-xs-12">
            <div class="btn btn-primary alignRight" ng-click="GuardarUsuario()">Guardar</div>
        </div>
    </div>

</div>