

<div id="divUsuario" class="modal modalUsuario">



    <div class="row">
        <div class="col-xs-12">
            <div class="btn btn-warning alignRight" ng-click="CerrarUsuario()">Cerrar</div>
        </div>
    </div>

    <div ng-if="DatosUsuario.Id == 0" class="row subrayado">
        <div class="col-xs-12"><h2>Alta de nuevo usuario </h2> </div>
    </div>

    <div ng-if="DatosUsuario.Id != 0" class="row">
        <div class="col-xs-8"><h2>Datos de: {{ DatosUsuario.Nombres }} </h2> </div>
        <div class="col-xs-4">
            <div class="btn btn-default">Chat</div>
            <div class="btn btn-danger">Bloquear</div>
        </div>
    </div>
 
 
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Nombre:</div>
                <div class="col-xs-8"> <input type="text" ng-model="DatosUsuario.Nombres" /></div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Primer apellido:</div>
                <div class="col-xs-8"><input type="text" ng-model="DatosUsuario.ApellidoPrimero" /></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Segundo apellido:</div>
                <div class="col-xs-8"><input type="text" ng-model="DatosUsuario.ApellidoSegundo" /></div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Usuario:</div>
                <div class="col-xs-8"><input type="text" ng-model="DatosUsuario.Login" /></div>
            </div>
        </div>
    </div>

    <div ng-if="DatosUsuario.Id == 0"  class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Crear password:</div>
                <div class="col-xs-8"><input type="password" ng-model="DatosUsuario.Password" /></div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-4">Repetir password:</div>
                <div class="col-xs-8"><input type="password" ng-model="DatosUsuario.RepetirPassword" /></div>
            </div>
        </div>
    </div>

