

<div id="divListaForo" class="marginTopBody">

    <div class="container" ng-init="BuscarMensajesForo()">
        <div class="row">
            <div class="col-xs-12">
                <div class="btn btn-danger alignRight" ng-click="BajaMensajesForoSeleccionados()">Baja a seleccionados</div>
                <div class="btn btn-default alignRight" ng-click="AltaMensajeForo()">Nuevo Tema</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6" ng-repeat="mensajeForo in MensajesForo">
                <div class="row">
                    <div class="col-xs-1 filaListaUsuario">
                        <input type="checkbox" ng-model="mensajeForo.Seleccionado" />
                    </div>
                    <div class="col-xs-11 filaListaUsuario">
                        {{mensajeForoTitulo}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 filaListaUsuario">Autor: {{mensajeForo.Autor}} </div>
                    <div class="col-xs-6 filaListaUsuario">Creado: {{mensajeForo.FechaAlta}}</div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        Ultima Respuesta: {{mensajeForo.UltimoAutor }}
                    </div>
                    <div class="col-xs-6">
                        Fecha: {{mensajeForo.FechaUltimaContestacion }}
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@Html.Partial("_MensajeForo")