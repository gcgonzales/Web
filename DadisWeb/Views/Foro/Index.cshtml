

<div id="divListaForo" class="marginTopBody">

    <div class="container" ng-init="BuscarMensajesForo()">
        <div class="row subrayado" >
            <div class="col-xs-12">
                <h1 class="col-xs-12 col-sm-6 alignLeft">Foro</h1>
                <div class="btn btn-danger alignRight" ng-if="DatosUsuarioLogado!=null && DatosUsuarioLogado!=undefined && DatosUsuarioLogado.Id != 0" ng-click="BajaTemasSeleccionadosForo()">Baja a seleccionados</div>
                <div class="btn btn-default alignRight" ng-if="DatosUsuarioLogado!=null && DatosUsuarioLogado!=undefined && DatosUsuarioLogado.Id != 0" ng-click="AltaMensajeForo()">Nuevo Tema</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 TemaForo" ng-repeat="mensajeForo in MensajesForo">
                <div class="row backGroundForo1">
                    <div class="col-xs-1">
                        <input type="checkbox" ng-model="mensajeForo.Seleccionado" ng-if="DatosUsuarioLogado.Id==mensajeForo.IdUsuarioAlta || DatosUsuarioLogado.PerfilKey == AdminKey()" />
                    </div>
                    <div class="col-xs-11" ng-click="GetHiloTema(mensajeForo.Id)">
                        <h1>{{mensajeForo.Titulo}}</h1>
                    </div>
                </div>
                <div class="row cuerpoTemaForo">
                    <div class="col-xs-2"><img alt="persona" ng-src="{{(mensajeForo.RutaFotoAutor != null && mensajeForo.RutaFotoAutor != '') ? mensajeForo.RutaFotoAutor : '/Content/images/person.jpg'  }}" ng-click="MostrarUsuario(mensajeForo.IdUsuarioAlta)" class="photoLogado" /></div>
                    <div class="col-xs-5" ng-click="GetHiloTema(mensajeForo.Id)"><h4> Autor: {{mensajeForo.Autor}} </h4></div>
                    <div class="col-xs-5" ng-click="GetHiloTema(mensajeForo.Id)"><h4> Creado: {{mensajeForo.FechaAlta}}</h4></div>
                    <div class="col-xs-5" ng-click="GetHiloTema(mensajeForo.Id)">
                        <h5>  Ultima Resp: {{mensajeForo.UltimoAutor }} </h5>
                    </div>
                    <div class="col-xs-5" ng-click="GetHiloTema(mensajeForo.Id)">
                        <h5> Fecha: {{mensajeForo.FechaUltimaContestacion }}</h5>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@Html.Partial("_MensajeForo")