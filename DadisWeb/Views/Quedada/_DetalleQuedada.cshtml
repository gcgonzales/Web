<div id="divDetalleQuedada" class="modal modalMensajeForo">

    <div class="row">
        <div class="col-xs-12">
            <div class="btn btn-warning alignRight" ng-click="CerrarQuedada()">Cerrar</div>
            <div class="btn btn-danger alignRight" ng-click="BajaSeleccionadosQuedada()">Baja a seleccionados</div>
        </div>
    </div>
 
    <div id="divHiloForo" ng-if="Quedadas != null && Quedadas.length > 0" class="row hiloForo">
        <div class="col-xs-12 TemaForo" ng-repeat="quedada in Quedadas">
            <div class="row backGroundForo1">
                <div class="col-xs-1">
                    <input type="checkbox" ng-model="quedada.Seleccionado" />
                </div>
                <div class="col-xs-11">
                    <input type="text" ng-readonly="quedada.EditandoQuedada == false" ng-model="quedada.Titulo" />
                </div>
            </div>
            <div class="row cuerpoTemaForo">
                <div class="col-xs-6"><h5> Autor: {{quedada.Autor}} </h5></div>
                <div class="col-xs-6"><h5> Creado: {{quedada.FechaAlta}}</h5></div>
                <div class="col-xs-12"><textarea ng-readonly="hiloMensajes.EditandoQuedada == false" type="text" class="textAreaForo" ng-model="Quedada.Descripcion"></textarea> </div>
                <div class="col-xs-12" ng-if="hiloMensajes.EditandoQuedada == false">
                    <a href="#" class="btn btn-danger btn-xs alignRight">
                        <span class="glyphicon glyphicon-erase"></span> Eliminar
                    </a>
                    <a href="#" class="btn btn-primary btn-xs alignRight" ng-click="ActivarEdicionQuedada(quedada.Id)">
                        <span class="glyphicon glyphicon-edit"></span> Editar
                    </a>
                </div>
                <div class="col-xs-12" ng-if="quedada.EditandoQuedada == true">
                    <a href="#" class="btn btn-danger btn-xs alignRight" ng-click="CancelarEdicionQuedada()">
                        <span class="glyphicon glyphicon-erase"></span> Cancelar
                    </a>
                    <a href="#" class="btn btn-primary btn-xs alignRight" ng-click="GuardarQuedada(quedada.Id)">
                        <span class="glyphicon glyphicon-edit"></span> Guardar
                    </a>
                </div>

            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-xs-12 subrayado">
            <h2>Nueva quedada</h2>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Titulo:</div>
                <div class="col-xs-8"> <input type="text" ng-model="Quedada.Titulo" /></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Resumen:</div>
                <div class="col-xs-8"> <input type="text" ng-model="Quedada.Resumen" /></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Descripción:</div>
                <div class="col-xs-8"> <textarea ng-model="Quedada.Descripcion" rows="5"></textarea></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Máx. Asistentes:</div>
                <div class="col-xs-1"><input type="text" ng-model="Quedada.MaximoAsistentes"></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Locación:</div>
                <div class="col-xs-8"><input type="text" ng-model="Quedada.Locacion"></div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">
                    Día:
                </div>
                <div class="col-xs-2">
                    <datepicker datepicker-show="{{ctrl.visibility}}" date-format="d/M/y">
                        <input ng-model="Quedada.FechaEvento" type="text" class="angular-datepicker-input" />
                    </datepicker>
                </div>
                <div class="col-xs-1">
                    Hora:
                </div>
                <div class="col-xs-1">
                    <input type="text" ng-model="Quedada.HoraEvento" />
                </div>
                <div class="col-xs-1">
                    <input type="text" ng-model="Quedada.MinutoEvento" />
                </div>

            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-4">Fotos:</div>
                <div class="col-xs-4">
                    @using (Html.BeginForm("UploadPhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formUsuarioPhoto" }))
                    {
                        <input type="file" name="fileInput" id="fileInput" />
                    }
                </div>
                <div class="col-xs-4">
                    <a href="#" class="btn-mini btn-primary btn-xs alignLeft" ng-click="SubirFotoQuedada(Quedada.Id)">
                        <span class="glyphicon glyphicon-edit"></span> Añadir
                    </a>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-6 col-sm-3 col-md-2" ng-repeat="fotografias in Quedada.Fotografias">
                        <img alt="" style="width:80%;" ng-src="{{fotografias.RutaFoto}}" />
                        <p><input type="checkbox" ng-model="fotografias.Baja" />Eliminar</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-xs-12">
            <a href="#" class="btn btn-primary btn-sm alignRight" ng-click="GuardarQuedada()">
                <span class="glyphicon glyphicon-edit"></span> Guardar
            </a>
        </div>

    </div>
</div>